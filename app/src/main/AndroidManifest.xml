<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jp.footballstats">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PlayerStatsActivity"
            android:label="@string/player_stats_title_activity"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.jp.footballstats.MainActivity" />
        </activity>
        <activity
            android:name=".AddGameActivity"
            android:label="@string/add_game_title_activity"
            android:parentActivityName=".PlayerStatsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".PlayerStatsActivity" />
        </activity>
        <activity
            android:name=".ShowStatsActivity"
            android:label="@string/show_stats_title"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
    </application>

</manifest>
